<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/search.css" />

    <title>Amazona | Proyecto Grupo 3</title>
  </head>

  <body>
    <%- include('./partials/navbar') %>
    <main>
      <% if(productos.length == 0) { %>
        <h2 class="productosNoEncontrados">No se encontraron productos.</h2>
      <% } %>
      <section class="categoriasSection">
        <% uniqueCategory.forEach(categoria => { %>
          <div class="categoriaContainer">
            <a class="categoriaLink" href="/categorias/<%= categoria.id %>">
              <p class="categoriaText"><%= categoria.titulo %></p>
            </a>
          </div>
         <%  }) %>
      </section>

      <section class="productosSection">
        <% for(let i = 0; i < productos.length; i++) { %>
          
          <div class="productContainer">
            <div class="productImgDiv">
              <a href="/product/<%= productos[i].idpublicacion %>">
              <img class="productImg" src="/img/<%= productos[i].imagenes[0].imagen %>">
            </a>
            </div>

            <div class="productInfoContainer">
              <div class="productTitleDiv">
                <a href="/product/<%= productos[i].idpublicacion %>">
                  <span class="marca"><%= productos[i].marcas.marca %></span>
                  <h3><%= productos[i].titulo %></h3>
                </a>
                
              </div>
              <div class="productInfoDiv">
                <div class="precio">
                  <p>$ <%= productos[i].precio %></p>
                </div>
                <div style="display: none;">
                  <p>Marca: <%= productos[i].marcas.marca %></p>
                </div>
                <div style="display: none;">
                  <p>En stock: <%= productos[i].stock %></p>
                </div>
              </div>
              
            </div>

            
            
            <div></div>

          </div>
        <% } %>
      </section>
    </main>
  </body>

</html>